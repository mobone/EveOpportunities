{{> headers/tradeHub-header}}
<div class="content">
    <div class="container-fluid">
        <div class="section">
            <div class="table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        {{!-- change these th's to be column headers --}}
                        <th>Rank</th>
                        <th>Item Name</th>
                        <th>Item Type</th>
                        <th>Buy Price</th>
                        <th>Profit</th>
                        <th>%</th>
                        <th>Volume</th>
                        <th>Days Sold</th>
                    </thead>
                    <tbody>
                        {{#each item}}
                        <tr>
                            {{!-- API response property names --}}
                            <td>{{total_rank}}</td>
                            <td>{{item_name}}</td>
                            <td>{{item_type}}</td>
                            <td>{{buy_price}}</td>
                            <td>{{profit}}</td>
                            <td>{{profit_percent}}%</td>
                            <td>{{total_volume}}</td>
                            <td>{{num_days}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


